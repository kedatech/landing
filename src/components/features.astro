---
import { Icon } from "astro-icon/components"
import ContentSection from "~/components/content-section.astro"
import type { FeatureItem } from "~/types"

const features: Array<FeatureItem> = [
	{
		title: "Flexibilidad para usar tu propio stack",
		description:
			"En Kedatech, puedes desarrollar utilizando las tecnologías que prefieras, ya sea React, Angular, Vue, o cualquier otro stack de tu elección.",
		icon: "mdi:handshake",
	},
	{
		title: "Soluciones optimizadas y ligeras",
		description:
			"Ofrecemos productos que son altamente optimizados para rendimiento, utilizando el mínimo de recursos posibles y garantizando una experiencia fluida.",
		icon: "mdi:feather",
	},
	{
		title: "Componentes escalables y personalizados",
		description:
			"Nuestros sistemas permiten añadir y escalar funcionalidades a medida que las necesidades de tu negocio crecen, con total personalización según tu visión.",
		icon: "mdi:directions-fork",
	},
	{
		title: "Integración amplia",
		description:
			"Kedatech facilita la integración con diferentes servicios y herramientas del mercado como APIs, plataformas cloud, y módulos de terceros.",
		icon: "mdi:graph",
	},
	{
		title: "Optimización para SEO",
		description:
			"Automatizamos la creación de sitemaps, feeds RSS, y otras herramientas para optimizar la visibilidad y el posicionamiento de tus soluciones en motores de búsqueda.",
		icon: "mdi:search-web",
	},
	{
		title: "Comunidad colaborativa",
		description:
			"Kedatech es una startup que crece gracias al apoyo de una comunidad global de profesionales apasionados, contribuyendo al desarrollo y mejora continua.",
		icon: "mdi:account-group",
	},
]
---

<ContentSection
	title="Features"
	id="features"
>
<Fragment slot="lead">
    Soluciones <span class="text-primary"> tecnológicas innovadoras</span> y adaptables, para impulsar tu negocio.
</Fragment>

	<ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
		{
			features.map(({ title, description, icon }) => (
				<li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
					<div class="size-16 rounded-full border-2 border-current p-3">
						<Icon
							name={icon}
							class="size-full"
						/>
					</div>
					<p class="text-center font-extrabold text-xl">{title}</p>
					<p class="text-center text-offset text-sm">{description}</p>
				</li>
			))
		}
	</ul>
</ContentSection>
